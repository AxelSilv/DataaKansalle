<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/municipalityFragmentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/municipalityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kunnan nimi"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="12dp"/>


        <TextView
            android:id="@+id/employmentRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Työllisyysaste: -"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/jobSelfSufficiency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Työpaikkaomavaraisuus: -"
            android:paddingBottom="10dp"/>

    </LinearLayout>
</ScrollView>
